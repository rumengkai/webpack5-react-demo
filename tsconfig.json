{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": ["node_modules/@types", "./src/typings"],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
